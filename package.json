{
  "name": "medli",
  "version": "0.0.1",
  "private": true,
  "description": "TypeScript monorepo for medli",
  "workspaces": [
    "packages/spec",
    "packages/generators/*",
    "packages/renderers/*",
    "packages/test-app"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev -w @medli/test-app",
    "dev:generate": "while true; do npx tsx packages/test-app/scripts/generate-pendulum.ts > packages/test-app/public/frame.json; sleep 0.1; done",
    "test": "jest",
    "lint": "eslint 'packages/**/src/**/*.ts' --ignore-pattern '**/__tests__/**'",
    "lint:fix": "eslint 'packages/**/src/**/*.ts' --ignore-pattern '**/__tests__/**' --fix",
    "format": "prettier --write 'packages/**/src/**/*.ts'",
    "format:check": "prettier --check 'packages/**/src/**/*.ts'",
    "typecheck": "tsc --build && npm run typecheck -w @medli/test-app"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "engines": {
    "node": ">=18"
  }
}
